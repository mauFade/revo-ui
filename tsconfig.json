{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@styles": ["styles/*"],
      "@pages/*": ["pages/*"],
      "@services/*": ["services/*"],
      "@commons/*": ["commons/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": ["src", "tests", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
